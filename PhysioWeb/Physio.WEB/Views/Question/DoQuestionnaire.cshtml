@{
    ViewBag.Title = "Do Questionnaire";
}


@section Styles {

    @Styles.Render("~/bundles/ionRangeStyles")
    @Styles.Render("~/bundles/sweetAlertStyles")

    @*@Styles.Render("~/bundles/nouiSliderStyles")*@

}


<div class="wrapper wrapper-content">  
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="ibox-content">
                <div id="animation_area" class="animated">
                    <div class="ibox float-e-margins border-bottom" id="question-view" data-bind="with: CurrentQuestion">
                        <div class="ibox-title">
                            <h5>Question <span data-bind="text: $root.QuestionNumber"></span></h5>
                        </div>
                        <div class="well">
                            <h3 class="m-b-lg" data-bind="text: QuestionText"></h3>
                        </div>
                        <div class="form-group">
                            <p class="text-muted"><span data-bind="text: QuestionHint"></span></p>
                        </div>
                        <div class="form-group">
                            <div id="slider-container-outer">
                                <div id="slider-container-inner">
                                    <div id="ir-slider"></div>
                                </div>
                            </div>
                        </div>                        
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-bind="click: $root.SubmitQuestion, clickBubble: false">Submit Answer</button>
                        </div>
                     </div>  
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>


@section Scripts {

    @Scripts.Render("~/bundles/sweetAlert")

    @Scripts.Render("~/bundles/ionRange")

    @*@Scripts.Render("~/bundles/nouislider")*@
    @Scripts.Render("~/bundles/knockout")

    <script src="~/Scripts/ko/Questions.js"></script>

}

